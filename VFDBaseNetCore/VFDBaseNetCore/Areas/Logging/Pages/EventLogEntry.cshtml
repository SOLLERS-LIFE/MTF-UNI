@page
@model MTF.Areas.Logging.Pages.EventLogEntryModel
@{
    ViewData["Title"] = Model.PageName;
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var NavHeight = MTF.GlobalParameters.NavbarHeight;
}

@using (Html.BeginForm("EventLogEntry", "", FormMethod.Post,
                   new { id = "pageForm", name = "pageForm" }
                  )
)
{
    @Html.HiddenFor(m => m.input.ID)
<partial name="~/Pages/Shared/_statusMessage.cshtml" model="@Model._statusMessage" />    
<div class="container-fluid mt-3 px-5">
    <div class="row mb-1">
        <div class="col-3">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.logged): </span><span class="text-break">@Html.DisplayFor(m => m.input.logged)</span>
        </div>
        <div class="col-3">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input._level): </span><span class="text-break">@Html.DisplayFor(m => m.input._level)</span>
        </div>
        <div class="col-3">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.appIdent): </span><span class="text-break">@Html.DisplayFor(m => m.input.appIdent)</span>
        </div>
        <div class="col-3">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.machineName): </span><span class="text-break">@Html.DisplayFor(m => m.input.machineName)</span>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-6">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.reqhost): </span><span class="text-break">@Html.DisplayFor(m => m.input.reqhost)</span>
        </div>
        <div class="col-6">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.url): </span><span class="text-break">@Html.DisplayFor(m => m.input.url)</span>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-12">
            <hr class="text-primary bg-primary" style="height:5px;border:none;" />
        </div>
    </div>
    <div class="row my-1">
        <div class="col-12">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.message): </span><span class="text-break">@Html.DisplayFor(m => m.input.message)</span>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-12">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.callsite): </span><span class="text-break">@Html.DisplayFor(m => m.input.callsite)</span>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-12">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.logger): </span><span class="text-break">@Html.DisplayFor(m => m.input.logger)</span>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-12">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input._exception): </span><span class="text-break">@Html.DisplayFor(m => m.input._exception)</span>
        </div>
    </div>
    <div class="row my-1">
        <div class="col-12">
            <span class="font-weight-bold">@Html.DisplayNameFor(m => m.input.properties): </span><span class="text-break">@Html.DisplayFor(m => m.input.properties)</span>
        </div>
    </div>
</div>
}

<!--partial name="~/Pages/Shared/_CommonFooter.cshtml"-->

