@model string
@{
// usage
// <partial name="~/Pages/Shared/_statusMessage.cshtml" model=@Model._statusMessage />
}
@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : "success";
    <div class="container-fluid mx-0 px-0 my=0 py=0">
        <div class="alert bg-@statusMessageClass text-black alert-dismissible show" role="alert" style="max-height: @MTF.GlobalParameters.NavbarHeight">
            <button type="button" class="close" data-mdb-dismiss="alert" aria-label="Close"
                    style="position:relative; top: -0.2rem;">
                <span aria-hidden="true" class="fas fa-times-circle fa-fw me-1"></span>
            </button>
            <span style="position:relative; top: -0.4rem;">@Model</span>
        </div>
    </div>
}
